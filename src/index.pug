div.main-mid-back
div.main-mid-back-mobile
	img.main-mid-back-mobile__image(src="/public/images/index-mid-back-mobile.svg")
div.content
	div.main-problems
		h2.subtitle Решаем проблемы в сфере ЖКХ
		div.main-problems__list
			div.main-problems__solve
				img.main-problems__image(
					src="/public/images/problem-incorrect-device.svg"
					alt="Иллюстрация к решению проблемы выявления некорректно работающих систем коммерческого учёта"
				)
				h3.main-problems__title Выявляем некорректно работающие системы коммерческого учета
				p.main-problems__text За счет точной настройки параметров приборов мы в кратчайшие
					|  сроки определяем неполадки и сообщаем о них
			div.main-problems__solve
				img.main-problems__image(
					src="/public/images/problem-incorrect-data.svg"
					alt="Иллюстрация к решению проблемы выявления ошибочно переданных данных от абонентов"
				)
				h3.main-problems__title Сообщаем об ошибочно переданных показаниях от абонентов
				p.main-problems__text Анализируем полученные данные потребления и предупреждаем,
					|  если показания вызывают подозрения
			div.main-problems__solve
				img.main-problems__image(
					src="/public/images/problem-damages.svg"
					alt="Иллюстрация к решению проблемы определения утечек и несанкционированных подключений"
				)
				h3.main-problems__title Определяем утечки и несанкционированные подключения
				p.main-problems__text Задача о проверке инженерных сетей автоматически придет
					|  исполнителю в личный кабинет
			div.main-problems__solve
				img.main-problems__image(
					src="/public/images/problem-crash.svg"
					alt="Иллюстрация к решению проблемы прогнозирования аварийных ситуаций"
				)
				h3.main-problems__title Позволяем прогнозировать аварийные ситуации
				p.main-problems__text Система заранее предупредит о дате окончания срока
					|  эксплуатации приборов
	div.main-advantages
		h2.subtitle Преимущества TT Management
		div.main-advantages__list
